<section class="hero is-link">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-vcentered">
        <div class="column">
          <h1 class="title is-size-1">Your Trips</h1>
        </div>
      </div>
    </div>
  </div>
</section>
<br>
<div class="container">
  <div class="columns is-centered">
    <div class="column is-two-thirds has-text-centered">
      <%= link_to 'Create New Trip', new_trip_path, class: "button is-primary has-space-around" %>
      <br>
      <table class="table is-size-7-mobile">
        <thead>
          <tr>
            <th>De</th>
            <th>À</th>
            <th>Date</th>
            <th class="is-hidden-mobile">Heure</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @trips.each do |trip| %>
            <tr class="<%= searching_background_color(trip) %>">
              <td><%= trip.departure_station %></td>
              <td><%= trip.arrival_station %></td>
              <td><%= trip.from_date.strftime('%d/%m/%y') if trip.from_date %></td>
              <td class="is-hidden-mobile"><%= trip.from_date.strftime('%HH%M') if trip.from_date %>-<%= trip.to_date.strftime('%HH%M') if trip.to_date %> </td>
              <td class="td-icon"><%= link_to '🔎', trip %></td>
              <td class="td-icon"><%= link_to '✏️', edit_trip_path(trip) %></td>
              <td class="td-icon"><%= link_to '❌', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<br>
</div>
