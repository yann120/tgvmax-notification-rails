<p id="notice"><%= notice %></p>

<section class="hero is-link">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-vcentered">
        <div class="column">
          <h1 class="title is-size-1">Your Trips</h1>
        </div>
      </div>
    </div>
  </div>
</section>
<br>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Departure station</th>
      <th>Arrival station</th>
      <th>From date</th>
      <th>To date</th>
      <th>Searching</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.user_id %></td>
        <td><%= trip.departure_station %></td>
        <td><%= trip.arrival_station %></td>
        <td><%= trip.from_date %></td>
        <td><%= trip.to_date %></td>
        <td><%= trip.searching %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %>
